#!/bin/bash

#######################################
u=$HOME/snap/$SNAP_NAME/u1-shell-launch
if [[ -f $u ]]; then
. $u
fi
#######################################

xrun="/snap.$SNAP_NAME"

e1=`cat $SNAP_USER_COMMON/printenv1.sh`
e2=`cat $SNAP_USER_COMMON/printenv2.sh`
declare -A r1
declare -A r2

IFS=$'\n'

for a in $e1 ; do
  en="${a%%=*}"
  ev="${a#*=}"
  r1[$en]="$ev"
done

for a in $e2 ; do
  en="${a%%=*}"
  ev="${a#*=}"
  r2[$en]="$ev"
done

e=`printenv`
for a in $e ; do
  en="${a%%=*}"
  ev="${a#*=}"
  v1="${r1[$en]}"
  v2="${r2[$en]}"
  v=""

  if [[ ${en:0:4} == "SNAP" ]]; then
    v=""
  elif [[ $en == "XDG_RUNTIME_DIR" ]]; then
    v="${v1%$xrun}"
  elif [[ "$v1" == "$v2" ]]; then
    continue
  else
    v="$v1"
  fi

  if [[ "$v" == ""  ]]; then
    export -n $en
  else
    export $en="$v"
  fi
done

IFS=""

#######################################
u=$HOME/snap/$SNAP_NAME/u2-shell-launch
if [[ -f $u ]]; then
. $u
fi
#######################################

exec $SHELL "$@"
